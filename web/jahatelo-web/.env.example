# Database Configuration
# PostgreSQL connection string for Prisma
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require&pgbouncer=true&connection_limit=1"

# Direct database connection (without pooler)
DIRECT_URL="postgresql://user:password@host:5432/database?sslmode=require&pgbouncer=true&connection_limit=1"

# JWT & Authentication
# JWT secret for token signing (minimum 32 characters)
JWT_SECRET="your-super-secret-jwt-key-minimum-32-characters-long-here"

# SMS OTP (AWS SNS)
OTP_SECRET="your-otp-hash-secret-minimum-32-characters"
OTP_DEFAULT_COUNTRY_CODE="595"

# Email (SMTP)
SMTP_HOST="smtp.hostinger.com"
SMTP_PORT="465"
SMTP_SECURE="true"
SMTP_USER="info@jahatelo.com"
SMTP_PASS="your-smtp-password"
EMAIL_FROM_NAME="Info Jahatelo"
EMAIL_FROM_ADDRESS="info@jahatelo.com"
EMAIL_VERIFICATION_SECRET="change-me"
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_SNS_REGION="us-east-1"
AWS_SNS_SENDER_ID="Jahatelo"
AWS_SNS_SMS_TYPE="Transactional"

# NextAuth configuration
NEXTAUTH_SECRET="your-nextauth-secret-minimum-32-characters"
NEXTAUTH_URL="http://localhost:3000"

# Google Maps API Key
# Required for geocoding motel addresses to coordinates
# Get your API key from: https://console.cloud.google.com/google/maps-apis
GOOGLE_MAPS_API_KEY="your_google_maps_api_key_here"

# Public Google Maps API Key (for client-side map display)
# Same as GOOGLE_MAPS_API_KEY but with NEXT_PUBLIC_ prefix for frontend use
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your_google_maps_api_key_here"

# Cloudinary Configuration
# For image uploads and storage
# Get your credentials from: https://cloudinary.com/console
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your-cloud-name"
NEXT_PUBLIC_CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# MercadoPago (Optional - for payment processing)
# Get your access token from: https://www.mercadopago.com.py/developers
MERCADOPAGO_ACCESS_TOKEN="your-mercadopago-access-token"

# Cron Jobs
# Secret key for protecting cron endpoints (minimum 32 characters)
# Used by /api/cron/process-notifications to process scheduled push notifications
# Vercel Cron Jobs automatically include: Authorization: Bearer ${CRON_SECRET}
CRON_SECRET="your-cron-secret-key-minimum-32-characters-long"

# Application URLs
# Base URL for the web application
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# API URL for mobile app
EXPO_PUBLIC_API_URL="http://localhost:3000"

# Monitoring & Logging
# Sentry DSN for error tracking (get from sentry.io)
SENTRY_DSN="your-sentry-dsn-here"
NEXT_PUBLIC_SENTRY_DSN="your-sentry-dsn-here"

# Upstash Redis (rate limiting)
UPSTASH_REDIS_REST_URL="https://your-upstash-url"
UPSTASH_REDIS_REST_TOKEN="your-upstash-token"

# Log level (error, warn, info, debug)
LOG_LEVEL="info"

# Environment
NODE_ENV="development"
